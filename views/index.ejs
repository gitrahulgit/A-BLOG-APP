<%- include('header');%>
    <div class="ui main text container">
        <div class="ui huge header" style="margin-top: 2.5em;"><i class="envelope icon"></i> RAHUL'S BLOG APP</div>
        <div class="ui top attached segment">
            <div class="ui divided item">
                <%blogs.forEach(function (blog) {%>
                    <div class="item">
                        <div class="image">
                            <img src="<%=blog.image%>" alt="Image Missing">
                        </div>
                        <div class="content">
                            <a class="header" href="/blogs/<%=blog._id%>">
                                <%=blog.title%>
                            </a>
                            <div class="meta">
                                <span><%=blog.created.toDateString()%></span>
                            </div>
                            <div class="descprition">

                                <p>
                                    <%=blog.body.substring(0, 100)%>


                                </p>
                            </div>
                            <div class="extras">
                                <a class="ui inverted green button" href="/blogs/<%=blog._id%>">Read More<i class="right chevron icon"></i></a>
                            </div>
                        </div>
                    </div>
                    <%});%>
            </div>
        </div>
    </div>

    <%- include('footer'); %>